#include<stdio.h>
#include<stdlib.h>
int main()
{
    int state=0,i=0;
    char symbol,input[20];
    printf("Enter the string \t :");
    scanf("%s",input);
    //printf("Given string is : %s");

    while((symbol=input[i++])!='\0')
    {
       // printf("current token : %c \n",token);
        switch(state)
        {
            case 0: if(symbol=='a')
                        state=1;
                    else if(symbol=='b')
                        state=3;
                    else
                    {
                        printf("Invalid token");
                        exit(0);
                    }
                    break;
            case 1: if(symbol=='a')
                        state=2;
                    else if(symbol=='b')
                        state=3;
                    else
                    {
                        printf("Invalid token");
                        exit(0);
                    }

                    break;
            case 2: if(symbol=='a')
                        state=2;
                    else if(symbol=='b')
                        state=3;
                    else
                    {
                        printf("Invalid token");
                        exit(0);
                    }
                    break;
            case 3: if(symbol=='a')
                        state=1;
                    else if(symbol=='b')
                        state=4;
                    else
                    {
                        printf("Invalid token");
                        exit(0);
                    }
                    break;
             case 4: if(symbol=='a')
                        state=1;
                    else if(symbol=='b')
                        state=4;
                    else
                    {
                        printf("Invalid token");
                        exit(0);
                    }
                    break;
        }
       // printf("state = %d  ",state);
    }
    if(state==2)
        printf("\n\nString accepted\n\n");
    else if(state==4)
        printf("\n\nString accepted\n\n");
    else
        printf("\n\nString not accepted\n\n");
}
